require './app'
require 'sinatra/activerecord/rake'

#task :db_setup do
  #require 'database.rb' unless defined?(DB)

  #DB.create_table :rounds do
    #Integer :rid, :null => false, :primary_key => true
    #String :face, :size => 5, :null => false
    #FalseClass :ended, :null => false, :default => false
    #Integer :winner, :null => false
  #end

  #DB.create_table :participations do
    #Integer :uid, :null => false, :primary_key => true
    #Integer :rid, :null => false
    #FalseClass :owner, :null => false, :default => false
    #String :face, :size => 5, :null => false

    #index :rid
  #end

  #DB.create_table :votes do
    #Integer :rid, :null => false, :primary_key => true
    #Integer :voter, :null => false
    #Integer :votee, :null => false
    
    #index :votee
  #end

  #DB.create_table :presets do
    #String :face, size => 5, :primary_key => true
    #String :name, size => 255

    #index :name
  #end
#end


